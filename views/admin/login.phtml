<body class="login-layout " style="background-color: #f1f1f1">
<div class="main-container">
    <div class="main-content">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="login-container">
                    <div class="center">
                        <h1>
                            <img src="../../asset/images/logo.png">
                        </h1>
                    </div>

                    <div class="space-6"></div>

                    <div class="position-relative">
                        <div id="login-box" class="login-box visible widget-box no-border" style="background-color: #f1f1f1">
                            <div class="widget-body">
                                <div class="widget-main">

                                    <div class="space-6"></div>

                                    <form id="form-login">
                                        <fieldset>
                                            <label class="block clearfix">
														<span class="block input-icon input-icon-right frmInput ">
															<input type="text" class="form-control required" placeholder="Nama" id="txtName" name="nama_user"
                                                                   autocomplete="off"/>
															<i class="ace-icon fa fa-id-card-o frmInput"></i>
														</span>
                                            </label>
                                            <label class="block clearfix">
														<span class="block input-icon input-icon-right frmInput ">
															<input type="email" class="form-control required" placeholder="Email" id="txtUsername" name="email_user"
                                                                   autocomplete="off"/>
															<i class="ace-icon fa fa-user frmInput"></i>
														</span>
                                            </label>

                                            <label class="block clearfix">
														<span class="block input-icon input-icon-right frmInput">
															<input type="text" class="form-control required" placeholder="Profesi" id="txtProfesi" name="profesi_user"
                                                                   autocomplete="off"/>
															<i class="ace-icon fa fa-black-tie frmInput"></i>
														</span>
                                            </label>

                                            <div class="space"></div>

                                            <div class="clearfix">
                                                <div class="col-xs-12 text-center">
                                                    <button class="width-35 text-center  btn btn-sm btn-primary" id="btnLogin">
                                                        <i class="ace-icon fa fa-list-ul"></i>
                                                        <span class="bigger-110">Daftar</span>
                                                    </button>
                                                </div>

                                            </div>
                                            <div class="space-4"></div>
                                        </fieldset>
                                    </form>

                                </div><!-- /.widget-main -->

                                <div class="toolbar clearfix hide" style="background-color: transparent; border: none">
                                    <div>
                                        <img src="../../asset/images/loginFB.png" width="150px" class="pull-left">
                                    </div>

                                    <div>
                                        <img src="../../asset/images/loginGoogle.png" width="150px">
                                    </div>
                                </div>
                            </div><!-- /.widget-body -->
                        </div><!-- /.login-box -->
                    </div><!-- /.position-relative -->

                </div>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.main-content -->
</div><!-- /.main-container -->

