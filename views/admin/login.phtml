<script type="text/javascript">
    if ('ontouchstart' in document.documentElement) document.write("<script src='https://stock.schoolmedia.id/f02/components/_mod/jquery.mobile.custom/jquery.mobile.custom.js'>" + "<" + "/script>");
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#form-login').validate({
            errorElement: 'div',
            errorClass: 'help-block text-danger red',
            rules: {
                name: 'required',

            },
            submitHandler: function () {
                logMasuk();
            }
        })
    })
    function logMasuk() {
        var user = $('#txtUsername').val(),
                pass = $('#txtPass').val();

        $.ajax({
            type: 'post',
            url: '/',
            data: {reqs: $('#form-login').serializeArray(), chuck: 'login'},

        }).success(function(x) {
            swal('Masuk', 'Anda login, selamat bekerja', 'success');

        }).always(function() {
            open('/', '_self');

        })

    }
</script>
</body>
</html>
